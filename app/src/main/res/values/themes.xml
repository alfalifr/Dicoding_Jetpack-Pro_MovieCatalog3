<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="textColorCounter" format="reference|color" />

    <!-- Base application theme. -->
    <style name="Theme.DicodingJetpackProMovieCatalog1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_lime</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor" >@color/black</item>
        <item name="textColorCounter" >@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Text.Title" parent="Theme.DicodingJetpackProMovieCatalog1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Text.Desc" parent="Theme.DicodingJetpackProMovieCatalog1">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Text.NumberTitle" parent="Theme.DicodingJetpackProMovieCatalog1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>